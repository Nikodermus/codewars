@import 'nib'
global-reset()

body
html
  background: #333
  color: white
  height: 100%
  width: 100%
  font-family: sans-serif
  font-size: 3rem
  font-weight: bold
  display: flex
  justify-content: center
  align-items: center
  padding: 2rem
  max-height: 100vh
  max-width 100vw
  overflow: hidden
  box-sizing: border-box
  p
    white-space: pre
    text-align: center